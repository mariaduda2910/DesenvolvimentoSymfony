{% extends 'base.html.twig' %}

{% block title %}Bem-vindo{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJg4MQe5g5F5E3v6AZI3mXj8xz1z8nH7KhFJKX72CR7zp8cX4Jmg+mANcUuI" crossorigin="anonymous">
<style>
    .container {
        text-align: center;
    }
    .custom-container {
        background-color: rgb(41, 111, 223);
        padding: 100px;
        border-radius: 15px;
        color: white;
        margin-bottom: 20px;
    }
    body {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background: rgb(244, 244, 86);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Bem-vindo!</h1>
</div>

<div class="custom-container">
    <h2>Clientes Não Verificados:</h2>

    <form method="post">
        {% if users is not empty %}
            {% for user in users %}
                <div>
                    <input type="checkbox" name="users[{{ user.id }}]" value="{{ user.id }}">
                    Nome: {{ user.nome }} - Email: {{ user.email }}
                </div>
            {% endfor %}
        {% else %}
            <p>Nenhum cliente não verificado encontrado.</p>
        {% endif %}
        
        <button type="submit" class="btn btn-success" formaction="{{ path('AceitarCliente') }}">Aceitar</button>
        <button type="submit" class="btn btn-danger" formaction="{{ path('RecusarCliente') }}">Recusar</button>
    </form>
</div>

<div class="custom-container">
    Criar Cliente
</div>

<div class="custom-container">
    Editar Cliente
</div>

<div class="custom-container">
    Excluir Cliente
</div>
{% endblock %}
