{% extends 'base.html.twig' %}

{% block title %} {{ Titulo }} {% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background: rgb(244, 244, 86);
    }
    .log_in {
        background-color: rgb(41, 111, 223);
        position: absolute;
        text-align: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 50px;
        border-radius: 60px;
        color: #fff;
        overflow: hidden; /* Evita que o conteúdo extravase */
        transition: height 0.3s ease; /* Suaviza alterações na altura */
        width: 300px; /* Definir uma largura para o formulário */
    }

    img {
        max-width: 200px;
        max-height: 150px;
        width: auto;
        height: auto;
        margin-top: 1px;
        margin-bottom: 12px;
    }

    .input-field {
        background-color: rgb(238, 239, 239);
        padding: 10px;
        border: none;
        outline: none;
        font-size: 15px;
        width: 100%; 
        margin-bottom: 15px; 
        border-radius: 5px; 
    }

    .adm {
        display: flex;
        justify-content: space-evenly;
        margin-bottom: 15px;
        background-color: white;
        color: black;
        width: 100%;
        border-radius: 5px; 
    }

    .botao_log_in {
        background-color: #fff;
        padding: 10px;
        border-radius: 10px;
        width: 100%;
        cursor: pointer;
        margin-bottom: 10px; 
        border: none; 
    }

    .botao_log_in:hover {
        transform: scale(0.9);
        transition: 0.2s;
    }
</style>
{% endblock %}

{% block body %}
<div class="log_in">
    <img src="{{ asset('imagens/Minions.png') }}" alt="no image :\">

    {{ form_start(form) }}
        {{ form_row(form.email, {'attr': {'class': 'input-field'}}) }}
        {{ form_row(form.nome, {'attr': {'class': 'input-field'}}) }}
        {{ form_row(form.password, {'attr': {'class': 'input-field'}}) }}

        <div class="adm">
            {{ form_label(form.isAdmin) }}
            <div>
                {{ form_widget(form.isAdmin, {'attr': {'class': 'input-field'}}) }}
            </div>
        </div>
        
        <div>
            {{ form_widget(form.registrar, {'attr': {'class': 'botao_log_in'}}) }}
        </div>

    {{ form_end(form) }}
</div>
{% endblock %}
